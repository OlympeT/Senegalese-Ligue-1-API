    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render 'layouts/header' %>
  <div class="container main">
    <%= render 'layouts/alert' %>
    <!-- Content here -->
    <%= yield %>
  </div>
  </body>
</html>
