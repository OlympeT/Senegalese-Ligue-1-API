    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Ligue 1 Sénégalaise - <%= content_for?(:title) ? yield(:title) : 'Le championnat' %> </title>
    <%= csrf_meta_tags %>
